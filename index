<body>
    <header>
        <div class="header-content">
            <h1>
                <span>ðŸ«§</span>
                Digital Bubble Wrap
            </h1>
            <div class="stats">
                <div class="stat-item">
                    <span class="stat-value" id="popped-count">0</span>
                    <span class="stat-label">Popped</span>
                </div>
                <div class="stat-item">
                    <span class="stat-value" id="combo-count">0</span>
                    <span class="stat-label">Combo</span>
                </div>
                <div class="stat-item">
                    <span class="stat-value" id="total-count">0</span>
                    <span class="stat-label">Total</span>
                </div>
            </div>
            <div class="controls">
                <button class="btn-primary" onclick="resetBubbles()">New Sheet</button>
                <button class="btn-secondary" onclick="toggleSettings()">Settings</button>
                <button class="btn-danger" onclick="clearAll()">Clear All</button>
            </div>
        </div>
    </header>

    <main>
        <div class="bubble-container" id="bubble-container"></div>
    </main>

    <div class="combo-indicator" id="combo-indicator"></div>

    <div class="settings-panel" id="settings-panel">
        <div class="settings-header">
            <h2>Settings</h2>
            <button class="settings-close" onclick="toggleSettings()">âœ•</button>
        </div>
        
        <div class="setting-group">
            <label class="setting-label">Bubble Size</label>
            <input type="range" class="slider" id="size-slider" min="40" max="80" value="60">
        </div>

        <div class="setting-group">
            <label class="setting-label">Grid Size</label>
            <input type="range" class="slider" id="grid-slider" min="5" max="15" value="10">
        </div>

        <div class="setting-group">
            <label class="setting-label">Sound Volume</label>
            <input type="range" class="slider" id="volume-slider" min="0" max="100" value="50">
        </div>

        <div class="setting-group">
            <label class="setting-label">Sound Effects</label>
            <label class="toggle-switch">
                <input type="checkbox" id="sound-toggle" checked>
                <span class="toggle-slider"></span>
            </label>
        </div>

        <div class="setting-group">
            <label class="setting-label">Particles</label>
            <label class="toggle-switch">
                <input type="checkbox" id="particles-toggle" checked>
                <span class="toggle-slider"></span>
            </label>
        </div>

        <div class="setting-group">
            <label class="setting-label">Combo Mode</label>
            <label class="toggle-switch">
                <input type="checkbox" id="combo-toggle" checked>
                <span class="toggle-slider"></span>
            </label>
        </div>
    </div>

    <div class="achievement" id="achievement">
        <div class="achievement-title" id="achievement-title"></div>
        <div class="achievement-desc" id="achievement-desc"></div>
    </div>

    <script>
        // Audio Context for sound generation
        const AudioContext = window.AudioContext || window.webkitAudioContext;
        const audioContext = new AudioContext();

        // Game state
        let poppedCount = 0;
        let totalCount = 0;
        let comboCount = 0;
        let lastPopTime = 0;
        let gridSize = 10;
        let bubbleSize = 60;
        let soundEnabled = true;
        let particlesEnabled = true;
        let comboEnabled = true;
        let volume = 0.5;

        // Sound generation using Web Audio API
        function playPopSound(frequency = 800, duration = 0.1) {
            if (!soundEnabled) return;

            const oscillator = audioContext.createOscillator();
            const gainNode = audioContext.createGain();

            oscillator.connect(gainNode);
            gainNode.connect(audioContext.destination);

            oscillator.frequency.value = frequency;
            oscillator.type = 'sine';

            gainNode.gain.setValueAtTime(volume, audioContext.currentTime);
            gainNode.gain.exponentialRampToValueAtTime(0.01, audioContext.currentTime + duration);

            oscillator.start(audioContext.currentTime);
            oscillator.stop(audioContext.currentTime + duration);
        }

        // Create particle effect
        function createParticles(x, y) {
            if (!particlesEnabled) return;

            for (let i = 0; i < 8; i++) {
                const particle = document.createElement('div');
                particle.className = 'particle';
                
                const angle = (Math.PI * 2 * i) / 8;
                const distance = 50 + Math.random() * 50;
                const tx = Math.cos(angle) * distance;
                const ty = Math.sin(angle) * distance;
                
                particle.style.setProperty('--tx', `${tx}px`);
                particle.style.setProperty('--ty', `${ty}px`);
                particle.style.left = `${x}px`;
                particle.style.top = `${y}px`;
                
                document.body.appendChild(particle);
                
                setTimeout(() => particle.remove(), 800);
            }
        }

        // Show achievement
        function showAchievement(title, description) {
            const achievement = document.getElementById('achievement');
            const titleEl = document.getElementById('achievement-title');
            const descEl = document.getElementById('achievement-desc');
            
            titleEl.textContent = title;
            descEl.textContent = description;
            
            achievement.classList.add('show');
            
            setTimeout(() => {
                achievement.classList.remove('show');
            }, 3000);
        }

        // Update combo
        function updateCombo() {
            if (!comboEnabled) return;

            const now = Date.now();
            if (now - lastPopTime < 1000) {
                comboCount++;
                if (comboCount > 1) {
                    const indicator = document.getElementById('combo-indicator');
                    indicator.textContent = `${comboCount}x COMBO!`;
                    indicator.classList.remove('show');
                    void indicator.offsetWidth; // Trigger reflow
                    indicator.classList.add('show');
                    
                    // Play combo sound
                    playPopSound(400 + comboCount * 100, 0.15);
                    
                    // Check for combo achievements
                    if (comboCount === 10) {
                        showAchievement('Combo Master!', '10x combo achieved!');
                    } else if (comboCount === 25) {
                        showAchievement('Combo Legend!', '25x combo achieved!');
                    } else if (comboCount === 50) {
                        showAchievement('Combo God!', '50x combo achieved!');
                    }
                }
            } else {
                comboCount = 1;
            }
            lastPopTime = now;
            
            document.getElementById('combo-count').textContent = comboCount;
        }

        // Create bubble
        function createBubble() {
            const bubble = document.createElement('div');
            bubble.className = 'bubble';
            
            bubble.addEventListener('click', function(e) {
                if (this.classList.contains('popped')) return;
                
                this.classList.add('popped');
                
                // Update stats
                poppedCount++;
                totalCount++;
                document.getElementById('popped-count').textContent = poppedCount;
                document.getElementById('total-count').textContent = totalCount;
                
                // Update combo
                updateCombo();
                
                // Create particles
                const rect = this.getBoundingClientRect();
                createParticles(rect.left + rect.width / 2, rect.top + rect.height / 2);
                
                // Play sound with random pitch
                const pitch = 600 + Math.random() * 400;
                playPopSound(pitch, 0.1);
                
                // Check achievements
                if (totalCount === 100) {
                    showAchievement('Century!', '100 bubbles popped!');
                } else if (totalCount === 500) {
                    showAchievement('Bubble Expert!', '500 bubbles popped!');
                } else if (totalCount === 1000) {
                    showAchievement('Bubble Master!', '1000 bubbles popped!');
                } else if (totalCount === 5000) {
                    showAchievement('Bubble Legend!', '5000 bubbles popped!');
                }
                
                // Auto-reset if all popped
                setTimeout(() => {
                    const container = document.getElementById('bubble-container');
                    const remaining = container.querySelectorAll('.bubble:not(.popped)').length;
                    if (remaining === 0) {
                        showAchievement('Sheet Complete!', 'All bubbles popped!');
                        setTimeout(resetBubbles, 1500);
                    }
                }, 500);
            });
            
            return bubble;
        }

        // Initialize bubbles
        function initBubbles() {
            const container = document.getElementById('bubble-container');
            container.innerHTML = '';
            container.style.gridTemplateColumns = `repeat(${gridSize}, ${bubbleSize}px)`;
            
            for (let i = 0; i < gridSize * gridSize; i++) {
                container.appendChild(createBubble());
            }
            
            poppedCount = 0;
            document.getElementById('popped-count').textContent = 0;
        }

        // Reset bubbles
        function resetBubbles() {
            initBubbles();
            comboCount = 0;
            document.getElementById('combo-count').textContent = 0;
        }

        // Clear all bubbles
        function clearAll() {
            const bubbles = document.querySelectorAll('.bubble:not(.popped)');
            let delay = 0;
            
            bubbles.forEach(bubble => {
                setTimeout(() => {
                    bubble.click();
                }, delay);
                delay += 30;
            });
        }

        // Toggle settings panel
        function toggleSettings() {
            const panel = document.getElementById('settings-panel');
            panel.classList.toggle('open');
        }

        // Settings event listeners
        document.getElementById('size-slider').addEventListener('input', function(e) {
            bubbleSize = parseInt(e.target.value);
            resetBubbles();
        });

        document.getElementById('grid-slider').addEventListener('input', function(e) {
            gridSize = parseInt(e.target.value);
            resetBubbles();
        });

        document.getElementById('volume-slider').addEventListener('input', function(e) {
            volume = parseInt(e.target.value) / 100;
        });

        document.getElementById('sound-toggle').addEventListener('change', function(e) {
            soundEnabled = e.target.checked;
        });

        document.getElementById('particles-toggle').addEventListener('change', function(e) {
            particlesEnabled = e.target.checked;
        });

        document.getElementById('combo-toggle').addEventListener('change', function(e) {
            comboEnabled = e.target.checked;
            if (!comboEnabled) {
                comboCount = 0;
                document.getElementById('combo-count').textContent = 0;
            }
        });

        // Initialize on load
        window.addEventListener('load', () => {
            initBubbles();
            
            // Resume audio context on first interaction
            document.addEventListener('click', () => {
                if (audioContext.state === 'suspended') {
                    audioContext.resume();
                }
            }, { once: true });
        });

        // Keyboard shortcuts
        document.addEventListener('keydown', (e) => {
            if (e.key === 'r' || e.key === 'R') {
                resetBubbles();
            } else if (e.key === 'c' || e.key === 'C') {
                clearAll();
            } else if (e.key === 's' || e.key === 'S') {
                toggleSettings();
            }
        });
    </script>
</body>
</html>
