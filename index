        }

        .bubble.popped {
            animation: pop 0.4s ease-out forwards;
            pointer-events: none;
        }

        @keyframes pop {
            0% {
                transform: scale(1);
            }
            50% {
                transform: scale(1.3);
                opacity: 0.8;
            }
